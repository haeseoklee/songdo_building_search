<body>
    <div class="thumbnail-wrapper"> 
        <div class="thumbnail"> 
            <div class="centered">
                <a href="<%= building.imageUrl %>">
                    <img src="<%= building.imageUrl %>" alt="<%= building.buildingName %>"> 
                </a>
            </div> 
        </div> 
    </div>

    <div class="inform">
        <span class="title"><%= floor.buildingName %></span> <span class="floor"><%= floor.floorNumber < 0 ? `지하 ${-floor.floorNumber}` : floor.floorNumber %> 층</span>
    </div>
    <div class="bunyang inform">
        <% let color = "#329932";
        if (floor.bunyang === "분양완료"){
            color = "#FF4C4C";
        } else if (floor.bunyang === "미분양") {
            color = "#FF4C4C";
        } else if (floor.bunyang === "임대가능") {
            color = "#3399FF";
        }%>
        <p style="background-color: <%= color %>;">
            <%= floor.bunyang %>
        </p>
    </div>
    <div class="block"></div>
    <div class="inform">
        <div class="bungyang-detail">
            <span class="inform-title">분양가</span>
